<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ate It</title>
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>

<body>
    <h1>{{#if reservation}}Edit Restaurant{{else}}Add Restaurant{{/if}}</h1>
    <div class="form-container">
    <form action="{{#if reservation}}/restaurants/update/{{restaurant._id}}{{else}}/restaurants/add{{/if}}" method="POST">
        {{#unless reservation}}
        <div class="input-container">
        <label for="name">Restaurant Name:</label>
        <input type="text" id="name" name="name" placeholder="Restaurant Name" value="{{restaurant.name}}" required>
        </div>
        <br>
        <div class="input-container">
        <label for="location">Location:</label>
        <input type="text" id="location" name="location" placeholder="Location" value="{{restaurant.location}}" required>
        </div>
        <br>
        {{/unless}}
        <div class="input-container">
        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating" placeholder="Rating 1-10" value="{{restaurant.rating}}" required>
        </div>
        <br>
        <div class="input-container">
        <label for="order">Order:</label>
        <input type="text" id="order" name="order" placeholder="Order" value="{{restaurant.order}}">
        </div>
        <br>
        <div class="input-container">
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" placeholder="Price" value="{{restaurant.price}}">
        </div>
        <br>
        <div class="input-container">
        <label for="review">Review:</label>
        <input type="text" id="review" name="review" placeholder="Review" value="{{restaurant.review}}">
        </div>
        <br> 
        <br>
        <button type="submit">{{#if reservation}}Update Restaurant{{else}}Add Restaurant{{/if}}</button>
        <br>
        <br>
        <button type="button" onclick="window.location.href='/restaurants'">Cancel</button>
    </form>
</body>
</html>